.contont{
  padding:0 30rpx 40rpx;
}

.activity{
  margin:20rpx 0;
  background-color:#FFFFFF;
}

.activity-item{
  padding:30rpx;
  display:flex;
  align-items:center;
}
.activity-hd{
  flex:auto;
}
.activity-arrow{
  flex:none;
  border-top: 2px solid rgba(0,0,0,0.5);
  border-right: 2px solid rgba(0,0,0,0.5);
  transform: rotate(45deg);
  width: 15px;
  height: 15px;
  transition:transform .3s;
}
.activity-detail{
  display: none;
}
.activity-item-hd-show{
  transform: rotate(135deg);
}
.activity-item-bd-show{
  display: block;
}


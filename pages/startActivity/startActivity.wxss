 }
 .button-container{
   position: relative;
 }
 .bouncebtn{
   position: absolute;
   display: flex; 
   transform:translate(0,100%);
   opacity: 0;
   transition:   all 0.3s;
 }
 .bouncebtn-in{
   transform:translate(0,0);
   opacity: 1;
 }
 .modifybtn-edit-disapear{
   opacity: 0;
 }